<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            android:lineSpacingExtra="10sp"
            android:text="Ερωτηματολογιο (3/3)"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            android:text="Το τελευταίο notification:"
            android:textAlignment="center"
            android:textSize="18sp" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="31dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:text="Αν ναι γιατί;" />


        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.15"
        android:weightSum="1">

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="34dp"
            android:checkedButton="1"
            android:layout_weight="1.08">

            <RadioButton
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="a.Ακατάλληλη ώρα"
                android:layout_weight="1" />

            <RadioButton
            android:id="@+id/distract"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
                android:text="c.Απόσπαση προσοχής" />

            <RadioButton
                android:id="@+id/manyNotif"
                android:layout_width="251dp"
                android:layout_height="wrap_content"
                android:text="b.Συνεχόμενες ειδοποιήσεις" />

            <RadioButton
            android:id="@+id/other"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="d.άλλο" />

        </RadioGroup>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">


            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:layout_alignBottom="@+id/radioGroup1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="fill"
                android:layout_marginBottom="44dp"
                android:text="6.Θα προτιμούσατε η συγκεκριμένη ειδοποίηση να έχει:"
                android:layout_weight="0.91" />
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="34dp"
            android:checkedButton="1"
            android:layout_weight="1.08">

            <RadioButton
                android:id="@+id/visual"
                android:layout_width="281dp"
                android:layout_height="wrap_content"
                android:text="a.Οπτική ειδοποίηση" />

        <RadioButton
            android:id="@+id/vibrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="b.Δόνηση" />

        <RadioButton
            android:text="c.Ηχητική ειδοποίηση"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sound" />

            <RadioButton
                android:text="d.Όλα μαζί"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/all" />

</RadioGroup>
    </LinearLayout>


    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Επόμενο"
        android:elevation="0dp"
        android:layout_marginTop="40dp" />

</LinearLayout>